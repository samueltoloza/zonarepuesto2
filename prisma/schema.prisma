// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

// ===========================
// MODELO DE USUARIOS
// ===========================
model User {
  id        String      @id @default(cuid())
  document  Int         @unique
  email     String      @unique
  name      String
  password  String
  inventory Inventory[] // Movimientos realizados por el usuario
  sales     Sale[] // Ventas realizadas por el usuario
  accounts  Account[]
}

// ===========================
// MODELO DE PROVEEDORES
// ===========================
model Supplier {
  id          String      @id @default(cuid())
  document    Int         @unique
  email       String      @unique
  name        String
  commodities Commodity[] // Productos que provee
}

// ===========================
// MODELO DE SEDES
// ===========================
model Headquarters {
  id             String          @id @default(cuid())
  name           String          @unique
  city           String
  commodities    Commodity[] // Productos disponibles en esta sede
  inventory      InventoryItem[] // Stock actual por sede
  sales          Sale[] // Ventas por sede
  inventoryMoves Inventory[] // Relación inversa agregada - MOVIMIENTOS DE INVENTARIO
}

// ===========================
// MODELO DE PRODUCTOS
// ===========================
model Commodity {
  id             String          @id @default(cuid())
  name           String          @unique
  description    String
  price          Float
  supplier       Supplier?       @relation(fields: [supplierId], references: [id])
  supplierId     String?
  headquarters   Headquarters?   @relation(fields: [headquartersId], references: [id])
  headquartersId String?
  inventory      InventoryItem[] // Stock por sede
  saleItems      SaleItem[] // Items vendidos
  inventoryMoves Inventory[] // Movimientos de inventario
}

// ===========================
// STOCK POR SEDE Y PRODUCTO
// ===========================
model InventoryItem {
  id             String       @id @default(cuid())
  commodity      Commodity    @relation(fields: [commodityId], references: [id])
  commodityId    String
  headquarters   Headquarters @relation(fields: [headquartersId], references: [id])
  headquartersId String
  stock          Int          @default(0)

  @@unique([commodityId, headquartersId]) // Garantiza único stock por producto+sede
}

// ===========================
// MOVIMIENTOS DE INVENTARIO
// ===========================
model Inventory {
  id             String       @id @default(cuid())
  movementType   String // Cambiado de MovementType a String - entrada, salida, ajuste
  quantity       Int
  commodity      Commodity    @relation(fields: [commodityId], references: [id])
  commodityId    String
  user           User         @relation(fields: [userId], references: [id])
  userId         String
  headquarters   Headquarters @relation(fields: [headquartersId], references: [id])
  headquartersId String
  createdAt      DateTime     @default(now())
  saleId         String? // Si es por una venta
  sale           Sale?        @relation(fields: [saleId], references: [id])
}

// ===========================
// VENTAS
// ===========================
model Sale {
  id             String       @id @default(cuid())
  date           DateTime     @default(now())
  total          Float
  user           User         @relation(fields: [userId], references: [id])
  userId         String
  headquarters   Headquarters @relation(fields: [headquartersId], references: [id])
  headquartersId String
  items          SaleItem[] // Productos vendidos
  inventory      Inventory[] // Movimientos relacionados
}

// ===========================
// ITEMS DE UNA VENTA
// ===========================
model SaleItem {
  id          String    @id @default(cuid())
  sale        Sale      @relation(fields: [saleId], references: [id])
  saleId      String
  commodity   Commodity @relation(fields: [commodityId], references: [id])
  commodityId String
  quantity    Int
}
